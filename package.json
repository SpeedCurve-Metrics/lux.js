{
  "name": "lux.js",
  "scripts": {
    "build": "mkdir -p dist && npm run compile-src && npm run minify",
    "compile-src": "tsc --allowJs --outFile dist/lux.js src/lux.js",
    "minify": "terser --mangle --compress --output dist/lux.min.js dist/lux.js",
    "jest": "jest",
    "jest-watch": "jest --watch",
    "prettier": "prettier --write 'src/**/*.js' 'tests/**/*.js'",
    "eslint": "eslint 'src/**/*.js' 'tests/**/*.js'",
    "test": "npm run eslint && npm run jest"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3",
    "jest-puppeteer": "^5.0.2",
    "prettier": "^2.2.1",
    "puppeteer": "^9.0.0",
    "rimraf": "^3.0.2",
    "terser": "^5.6.0",
    "typescript": "^4.2.2"
  },
  "prettier": {
    "printWidth": 100
  }
}
